<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moringaschool.recipestore.RecipesActivity"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="#03B424"
        android:hint="Enter Food name"
        android:padding="5dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"

        android:layout_marginRight="65dp"
        android:layout_marginBottom="668dp"
        android:text="Search"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/part1"
        android:layout_weight="6"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="170dp"
            android:layout_height="205dp"
            android:src="@drawable/im3"></ImageView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="170dp"
            android:layout_height="205dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im2"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/part2"
        android:layout_weight="8"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="170dp"
            android:layout_height="205dp"
            android:src="@drawable/im4"></ImageView>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="170dp"
            android:layout_height="205dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/im6"></ImageView>
    </LinearLayout>



</RelativeLayout>